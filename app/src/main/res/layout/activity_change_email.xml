<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    tools:context=".account.view.ChangeEmailActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout_changeEmail">

    </FrameLayout>


    <ImageView
        android:id="@+id/btn_BackChangeEmail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        app:tint="@color/purple_800"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:id="@+id/txt_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="@color/gray_600"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1"
            android:layout_marginTop="@dimen/dim_espacamento_60dp"
            android:text="@string/cinelist"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_45sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_emailChangeEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_espacamento_40dp"
            android:backgroundTint="@color/gray_600"
            android:hint="@string/e_mail_atual"
            android:textColorHint="@color/gray_600"
            app:boxStrokeColor="@color/white"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/gray_600">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_emailChangeEmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_newEmailChangeEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_espacamento_40dp"
            android:backgroundTint="@color/gray_600"
            android:hint="@string/novo_e_mail"
            android:textColorHint="@color/gray_600"
            app:boxStrokeColor="@color/white"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/gray_600">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_newEmailChangeEmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_changeEmail"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_espacamento_40dp"
            android:text="@string/trocar_e_mail"
            android:textAllCaps="true"
            android:textStyle="bold" />

</LinearLayout>