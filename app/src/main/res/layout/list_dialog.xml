<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/dim_10_dp">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_nameListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_espacamento_40dp"
        android:hint="@string/nome"
        app:endIconMode="clear_text"
        android:textColorHint="@color/gray_600"
        android:backgroundTint="@color/gray_600"
        app:hintTextColor="@color/gray_600"
        app:boxStrokeColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_nameListInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_descriptionListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_espacamento_40dp"
        android:hint="@string/descricao"
        app:endIconMode="clear_text"
        android:textColorHint="@color/gray_600"
        android:backgroundTint="@color/gray_600"
        app:hintTextColor="@color/gray_600"
        app:boxStrokeColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_descriptionListInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim_espacamento_40dp"
        android:layout_gravity="center"
        android:paddingVertical="5dp">

        <Button
            android:id="@+id/btn_criar"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="@dimen/dim_espacamento_10dp"
            android:gravity="center"
            android:text="criar"
            android:textAllCaps="true"
            app:backgroundTint="@color/facebook" />

        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="@dimen/dim_espacamento_10dp"
            android:gravity="center"
            android:text="cancelar"
            app:backgroundTint="@color/google"
            android:textAllCaps="true"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            />

    </LinearLayout>

</LinearLayout>