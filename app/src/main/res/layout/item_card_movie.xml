<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivFilmeSearch"
            android:layout_width="@dimen/dim_espacamento_95dp"
            android:layout_height="@dimen/dim_espacamento_125dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_espacamento_10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtNameSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dim_espacamento_8dp"
                tools:text="Name"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dim_espacamento_8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dim_espacamento_20dp"
                        android:layout_height="@dimen/dim_espacamento_20dp"
                        android:src="@drawable/ic_baseline_star_rate_24">

                    </ImageView>
                    <TextView
                        android:id="@+id/txtPunctuationSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        tools:text="8,7 / 10"/>
            </LinearLayout>
        <TextView
            android:id="@+id/txtKindMovieSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            tools:text="Vingadores Ultimato" />
        <TextView
            android:id="@+id/txtYearSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="2019"/>
    </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>