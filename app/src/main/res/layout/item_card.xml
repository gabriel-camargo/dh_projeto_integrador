<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_espacamento_16dp"
    android:layout_margin="@dimen/dim_espacamento_10dp"
    app:cardCornerRadius="@dimen/dim_espacamento_12dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="@dimen/dim_espacamento_120dp"
        android:layout_height="@dimen/dim_espacamento_200dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivImageCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_espacamento_150dp"
            />

        <TextView
            android:id="@+id/tvNameCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_8pt"
            android:layout_marginTop="@dimen/dim_espacamento_8dp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            tools:text="Sonic"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>